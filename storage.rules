rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Ürün resimleri için yazma ve okuma izni
    // Admin panelinden yüklenen resimler için - tam erişim
    // HERKESE AÇIK OKUMA İZNİ - Yeni kullanıcılar da görebilir
    match /product_images/{allPaths=**} {
      // Dosya boyutu kontrolü (max 10MB)
      allow write: if request.resource.size < 10 * 1024 * 1024;
      // Herkese açık okuma izni (authenticated veya unauthenticated)
      allow read: if true;
      allow delete: if true;
    }
    
    // Products klasörü için (eski yapı uyumluluğu)
    match /products/{allPaths=**} {
      // Dosya boyutu kontrolü (max 10MB)
      allow write: if request.resource.size < 10 * 1024 * 1024;
      // Herkese açık okuma izni
      allow read: if true;
      allow delete: if true;
    }
    
    // Diğer tüm dosyalar için varsayılan kurallar (erişim yok)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

